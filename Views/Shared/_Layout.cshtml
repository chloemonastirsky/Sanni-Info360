<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex flex-column min-vh-100">

  <header class="fixed-header">
      <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
      
          <!-- IZQUIERDA -->
          <div class="left-section">
            <div class="dropdown">
              <button class="btn dropdown-toggle" id="menuDropdown" data-bs-toggle="dropdown" aria-expanded="false">
               <img class="menu" src="~/imagenes/iconoMenu.png" alt="Menú">
              </button>
              <ul class="dropdown-menu" aria-labelledby="menuDropdown">
                <li><a class="dropdown-item" href="#">Inicio</a></li>
                
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href='@Url.Action("verFavoritos","Home")'>Favoritos</a></li>
                <li><a class="dropdown-item" href='@Url.Action("verRestaurantes","Home")'>Restaurantes</a></li>
                <li><a class="dropdown-item" href='@Url.Action("verRestricciones","Home")'>Restricciones</a></li>
                <li><a class="dropdown-item" href='@Url.Action("verNotificaciones","Home")'>Notificaciones</a></li>
                <!-- ASUMO que la acción de promociones es "verPromociones" o similar, si no existe en el Controller, cámbiala. -->
                <li><a class="dropdown-item" href='@Url.Action("verPromociones","Home")'>Promociones</a></li> 
                <li><a class="dropdown-item" href='@Url.Action("chatbot","Home")'>Chat</a></li>
              </ul>
            </div>
            <img class="logo" src="~/imagenes/LOGO TERMINADO SANNI LISTO.png" alt="Logo">   
          </div>
      
          <!-- DERECHA -->
          <div class="right-section">
            <img class="menu" src="~/imagenes/iconoLupa.png" alt="Buscar">

            <img class="menu" src="~/imagenes/iconoUsuario.webp" alt="Usuario">
          </div>
      
        </div>
      </nav>
    </header>
    
    <!-- PASO 3: Contenido Principal - Se le asigna la clase 'main-content' (para CSS) y 'flex-grow-1' (para sticky footer) -->
    <main role="main" class="pb-3 main-content flex-grow-1">
        @RenderBody()
    </main>
      
      <footer>
        <div class="footer-container">
          <div class="footer-logo">
            <img class="logo-footer" src="imagenes/logo simplificado editado.png" alt="Logo">
          </div>
      


          <div class="redes-numero">
          <div class="footer-redes">
            <img class="ig" src="imagenes/ig.png" alt="Instagram">
            <img class="x" src="imagenes/x.png" alt="X">
            <img class="tt" src="imagenes/tt.png" alt="TikTok">
          </div>
      
          <div class="footer-numero">
            <img class="telefono" src="imagenes/telefono.png" alt="Teléfono">
            <h6>+54 9 11 6289-1434</h6>
          </div>
        </div>
      </div>
      </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
