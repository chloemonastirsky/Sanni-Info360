@{
    // Obtener el objeto Usuario de ViewBag para facilitar la lectura
    var usuario = ViewBag.Usuario;
}

<div class="container my-5">
    
    @if (usuario != null)
    {
        <section class="profile-card bg-light p-4 rounded-3 shadow-sm mb-5">
            <div class="d-flex align-items-center">
                
                <div class="profile-avatar me-4">
                    <i class="fas fa-user-circle fa-4x" style="color: #4CAF50;"></i>
                    @* O, si tienes la imagen, usa: *@
                    @* <img src="@Url.Content("~/imagenes/usuarios/" + usuario.idUsuario + ".jpg")" alt="Foto de @usuario.nombre" class="rounded-circle" style="width: 80px; height: 80px; object-fit: cover;"> *@
                </div>

                <div class="profile-info">
                    <h2 class="fw-bold mb-1" style="color: #333;">@usuario.nombre</h2>
                    <p class="text-muted mb-0">
                        <i class="fas fa-map-marker-alt me-1"></i>
                        Dirección: **@usuario.Direccion**
                    </p>
                </div>
            </div>
        </section>

        <nav class="profile-options list-group">
            
            <a href='@Url.Action("editarPerfil", "Account", new { idUsuario = usuario.idUsuario })' class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                Información del perfil
                <i class="fas fa-chevron-right text-success"></i>
            </a>

            <a href='@Url.Action("notificaciones", "Home")' class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                Notificaciones
                <i class="fas fa-chevron-right text-success"></i>
            </a>
            
            <a href='@Url.Action("favoritos", "Home")' class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                Favoritos
                <i class="fas fa-chevron-right text-success"></i>
            </a>
            
            <hr class="my-2">
            
            <a href='@Url.Action("CerrarSesion", "Account")' class="list-group-item list-group-item-action list-group-item-danger text-danger fw-bold text-center">
                Cerrar sesión
            </a>
            
        </nav>
    }
   